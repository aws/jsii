#!/usr/bin/env python3
import os
import subprocess
import sys

subprocess.run(
    [
        "jsii-pacmak",
        "-t",
        "python",
        "-o",
        ".env/jsii-calc",
        "--recurse",
        "node_modules/jsii-calc",
    ],
    check=True,
)
subprocess.run(
    [
        sys.executable,
        "-m",
        "pip",
        "install",
        "--force-reinstall",
        "--upgrade",
    ]
    +
    [x for x in os.listdir(".") if x.endswith(".whl")]
    +
    [os.path.join('.env/jsii-calc/python', x) for x in os.listdir(".env/jsii-calc/python") if x.endswith(".whl")],
    check=True,
)
